
void countSort(vector<int>& a) {
    int maxi = *max_element(a.begin(), a.end());

    vector<int> count(maxi + 1, 0);

    // count frequency
    for(int x : a)
        count[x]++;

    int idx = 0;

    // rebuild array
    for(int i = 0; i <= maxi; i++) {
        while(count[i]--) {
            a[idx++] = i;
        }
    }
}
