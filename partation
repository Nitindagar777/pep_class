
#include<bits/stdc++.h>
using namespace std;
int partation(int *arr, int si, int ei){
    int i = si - 1;
    int pivot = arr[ei]; 

    for(int j=si; j<ei; j++){
        if(arr[j] <= pivot){
            i++;
            swap(arr[i], arr[j]);
        }
    }
    i++;
    swap(arr[i], arr[ei]);

    return i;
}

void quick_sort(int *arr, int si, int ei){
    if(si >= ei) return;
    int pivot_idx = partation(arr, si, ei);
    quick_sort(arr, si, pivot_idx - 1);
    quick_sort(arr, pivot_idx + 1, ei);
}

int main(){

    int arr[] = {2,99,3,7,8,9,19,1};
    int n = sizeof(arr)/sizeof(int);

    quick_sort(arr,0,n-1);
    for(int i=0; i<n; i++){
        cout << arr[i] << " ";
    }

    return 0;
}


