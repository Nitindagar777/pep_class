
#include <bits/stdc++.h>
using namespace std;

void selection_sort(int *arr, int n){
    for(int i=0; i<n-1; i++){
        int min_idx = i;
        for(int j=i+1; j<n; j++){
            if(arr[j] < arr[min_idx]){
                min_idx = j;
            }
        }
        swap(arr[i], arr[min_idx]);
    }
}

void print_arr(int *arr, int n){
    for(int i=0; i<n; i++){
        cout << arr[i] << " ";
    }
}

int main(){

    int arr[6] = {34,66,99,9,24,1};
    int size = sizeof(arr)/sizeof(int);
    selection_sort(arr, size);
    print_arr(arr, size);

    return 0;
}
