class Solution {
public:
    bool isValidSudoku(vector<vector<char>>& board) {

        
        for(int i = 0; i < 9; i++) {
            vector<bool> seen(9, false);
            for(int j = 0; j < 9; j++) {
                if(board[i][j] == '.') continue;

                int num = board[i][j] - '1';
                if(seen[num]) return false;
                seen[num] = true;
            }
        }

       
        for(int j = 0; j < 9; j++) {
            vector<bool> seen(9, false);
            for(int i = 0; i < 9; i++) {
                if(board[i][j] == '.') continue;

                int num = board[i][j] - '1';
                if(seen[num]) return false;
                seen[num] = true;
            }
        }

        
        for(int box = 0; box < 9; box++) {
            vector<bool> seen(9, false);
            int rowStart = (box / 3) * 3;
            int colStart = (box % 3) * 3;

            for(int i = 0; i < 3; i++) {
                for(int j = 0; j < 3; j++) {
                    char c = board[rowStart + i][colStart + j];
                    if(c == '.') continue;

                    int num = c - '1';
                    if(seen[num]) return false;
                    seen[num] = true;
                }
            }
        }

        return true;
    }
};
